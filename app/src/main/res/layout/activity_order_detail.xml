                android:text="@string/lorem"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/orderDetailSalespersonTVShowDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem"
