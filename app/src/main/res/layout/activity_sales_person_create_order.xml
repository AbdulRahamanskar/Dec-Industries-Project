                android:layout_height="wrap_content"
                android:text="Customer Info"
                android:textSize="20sp"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="22dp" />

            <!-- Add your TextInputLayouts and other views here -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCreateOrderSalesCustomerId"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="0dp"
                android:backgroundTint="@color/white"
                android:foregroundTint="@color/white"
                android:gravity="center"
                android:hint="ClientId"
                android:textColorHint="@color/light_black"
                app:boxStrokeColor="@color/blue"
                app:boxStrokeErrorColor="@color/red"
                app:boxStrokeWidth="2dp"
                app:cursorColor="@color/light_black"
                app:errorTextColor="@color/red"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/light_black"
                app:placeholderTextColor="@color/blue"
                app:shapeAppearanceOverlay="@style/cut_style"
                app:helperTextEnabled="true"
                app:helperText="Enter the correct client ID to retrieve the client's details"
                app:helperTextTextColor="@color/light_black"
                app:startIconMinSize="24dp"
                app:startIconScaleType="centerCrop">

