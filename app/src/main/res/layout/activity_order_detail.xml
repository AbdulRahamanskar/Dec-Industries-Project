            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="9dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">


        <LinearLayout
