<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_bgcolor"
    tools:context=".client.ClientFeedbackForm">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarClientFeedbackForm"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        android:layout_alignParentTop="true"
        app:subtitle="Feedback Form"
        android:layout_gravity="center"
        app:subtitleTextColor="@color/white"
        android:gravity="center_horizontal"
        app:title=""
        app:subtitleTextAppearance="@style/toolbarsubtitleTextStyle"
        tools:ignore="NotSibling" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarClientFeedbackForm"
        android:scrollbarStyle="outsideOverlay">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:layout_margin="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/feedback_vector_img"
                    app:shapeAppearanceOverlay="@style/smooth"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="5dp"
                android:layout_margin="9dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">
                    <RatingBar
                        android:id="@+id/clientRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/blue"
                        android:layout_marginTop="10dp"
                        android:progressTint="@color/blue"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilClientFeedbackFormClientId"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        android:backgroundTint="@color/white"
                        android:foregroundTint="@color/white"
                        android:gravity="center"
                        android:hint="Client Id"
                        android:textColorHint="@color/light_black"
                        app:boxStrokeColor="@color/blue"
                        app:boxStrokeErrorColor="@color/red"
                        app:boxStrokeWidth="2dp"
                        app:cursorColor="@color/light_black"
                        app:errorTextColor="@color/red"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="@color/light_black"
                        app:placeholderTextColor="@color/blue"
                        app:shapeAppearanceOverlay="@style/cut_style"
                        app:startIconMinSize="24dp"
                        app:startIconScaleType="centerCrop">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etClientFeedbackFormClientId"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/light_black"
                            android:cursorVisible="true"
                            android:drawableStart="@drawable/baseline_badge_24"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/light_black"
                            android:foregroundTint="@color/light_black"
                            android:inputType="text"
                            android:textColor="@color/light_black" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilClientFeedbackFormFullName"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        android:backgroundTint="@color/white"
                        android:foregroundTint="@color/white"
                        android:gravity="center"
                        android:hint="Sales Person Id"
                        android:textColorHint="@color/light_black"
                        app:boxStrokeColor="@color/blue"
                        app:boxStrokeErrorColor="@color/red"
                        app:boxStrokeWidth="2dp"
                        app:cursorColor="@color/light_black"
                        app:errorTextColor="@color/red"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="@color/light_black"
                        app:placeholderTextColor="@color/blue"
                        app:shapeAppearanceOverlay="@style/cut_style"
                        app:startIconMinSize="24dp"
                        app:startIconScaleType="centerCrop">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etClientFeedbackFormSalesPersonId"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/light_black"
                            android:cursorVisible="true"
                            android:drawableStart="@drawable/baseline_badge_24"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/light_black"
                            android:foregroundTint="@color/light_black"
                            android:inputType="textPersonName"
                            android:textColor="@color/light_black" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilClientFeedbackFormEmail"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        android:backgroundTint="@color/white"
                        android:foregroundTint="@color/white"
                        android:gravity="center"
                        android:hint="Email"
                        android:textColorHint="@color/light_black"
                        app:boxStrokeColor="@color/blue"
                        app:boxStrokeErrorColor="@color/red"
                        app:boxStrokeWidth="2dp"
                        app:cursorColor="@color/light_black"
                        app:errorTextColor="@color/red"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="@color/light_black"
                        app:placeholderTextColor="@color/blue"
                        app:shapeAppearanceOverlay="@style/cut_style"
                        app:startIconMinSize="24dp"
                        app:startIconScaleType="centerCrop">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etClientFeedbackFormEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light_black"
                            android:cursorVisible="true"
                            android:drawableStart="@drawable/baseline_email_24"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/light_black"
                            android:foregroundTint="@color/light_black"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/light_black" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilClientFeedbackFormOrderId"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        android:backgroundTint="@color/white"
                        android:foregroundTint="@color/white"
                        android:gravity="center"
                        android:hint="Order Id / Product Id"
                        android:textColorHint="@color/light_black"
                        app:boxStrokeColor="@color/blue"
                        app:boxStrokeErrorColor="@color/red"
                        app:boxStrokeWidth="2dp"
                        app:cursorColor="@color/light_black"
                        app:errorTextColor="@color/red"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="@color/light_black"
                        app:placeholderTextColor="@color/blue"
                        app:shapeAppearanceOverlay="@style/cut_style"
                        app:startIconMinSize="24dp"
                        app:startIconScaleType="centerCrop">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etClientFeedbackFormOrderId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light_black"
                            android:cursorVisible="true"
                            android:drawableStart="@drawable/baseline_groups_2_24"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/light_black"
                            android:foregroundTint="@color/light_black"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/light_black" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilClientFeedbackFormMobileNumber"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        android:backgroundTint="@color/white"
                        android:foregroundTint="@color/white"
                        android:gravity="center"
                        android:hint="Mobile Number"
                        android:textColorHint="@color/light_black"
                        app:boxStrokeColor="@color/blue"
                        app:boxStrokeErrorColor="@color/red"
                        app:boxStrokeWidth="2dp"
                        app:cursorColor="@color/light_black"
                        app:errorTextColor="@color/red"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="@color/light_black"
                        app:placeholderTextColor="@color/blue"
                        app:shapeAppearanceOverlay="@style/cut_style"
                        app:startIconMinSize="24dp"
                        app:startIconScaleType="centerCrop">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etClientFeedbackFormMobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/light_black"
                            android:cursorVisible="true"
                            android:drawableStart="@drawable/baseline_smartphone_24"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/light_black"
                            android:foregroundTint="@color/light_black"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/light_black" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilClientFeedbackFormFeedbackbox"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        android:backgroundTint="@color/white"
                        android:foregroundTint="@color/white"
                        android:hint="Message"
                        android:textColorHint="@color/light_black"
                        app:boxStrokeColor="@color/blue"
                        app:boxStrokeErrorColor="@color/red"
                        app:boxStrokeWidth="2dp"
                        app:cursorColor="@color/light_black"
                        app:errorTextColor="@color/red"
                        app:hintAnimationEnabled="true"
                        app:hintTextColor="@color/light_black"
                        app:placeholderTextColor="@color/blue"
                        app:startIconMinSize="24dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etClientFeedbackFormFeedbackbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:backgroundTint="@color/light_black"
                            android:cursorVisible="true"
                            android:drawablePadding="5dp"
                            android:inputType="textMultiLine"
                            android:lines="6"
                            android:minLines="6"
                            android:scrollbars="vertical"
                            android:scrollbarStyle="insideInset"
                            android:scrollHorizontally="false"
                            android:overScrollMode="always"
                            android:textColor="@color/light_black" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp">
                        <ImageButton
                            android:id="@+id/attachScreenShots"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_gravity="start"
                            android:background="@color/transparent"
                            android:scaleType="fitCenter"
                            app:tint="@color/light_black"
                            android:src="@drawable/baseline_add_a_photo_24"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attach ScreenShot"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/light_black"
                            android:textSize="20sp"
                            />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnClientFeedback"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:fontFamily="@font/open_sans_bold"
                        android:background="@drawable/button_bg"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>