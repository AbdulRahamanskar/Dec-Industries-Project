<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/salespersonImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="start"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_logo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/salespersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salesperson Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/salespersonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 12345"
            android:textSize="14sp"
            android:textColor="@color/light_black" />
        <TextView
            android:id="@+id/orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="orderId: 12345"
            android:textSize="14sp"
            android:textColor="@color/light_black" />

        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Received"
            android:fontFamily="@font/inter_bold"
            android:textSize="14sp"
            android:textColor="@color/green"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/orderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 01 Jan 2024"
            android:textSize="12sp"
            android:textColor="@color/light_black"
            android:layout_marginTop="2dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changeStatusButton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Next Status"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/button_bg"
            android:textColor="@color/blue"
            android:layout_margin="10dp"

             />

    </LinearLayout>


</LinearLayout>
