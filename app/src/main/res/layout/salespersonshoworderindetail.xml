<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="9dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">



            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
            <com.google.android.material.imageview.ShapeableImageView
                 android:id="@+id/detailSalesPersonSampleImage"
                android:layout_width="370dp"
                android:layout_height="400dp"
                android:src="@drawable/windows_unsplash"
                android:layout_marginStart="5dp"
                app:shapeAppearanceOverlay="@style/smooth"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                />
                <View
                    android:layout_width="370dp"
                    android:layout_height="400dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>


            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/detailSalesPersonCallButton"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@color/transparent"
                    android:src="@drawable/baseline_call_24"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="7dp"
                    app:shapeAppearanceOverlay="@style/smooth"
                    android:scaleType="centerCrop"
                    android:padding="5dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginStart="2dp"
                    android:textSize="20sp"
                    android:textColor="@color/red"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/detailSalesPersonTvDetailPrice"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="20,00,000/-"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    android:layout_gravity="center"
                    android:layout_marginEnd="7dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/detailSalesPersonTvDetailOrderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginStart="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/green"
                    android:layout_gravity="end|center"
                    android:gravity="center"
                    android:layout_marginEnd="7dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/detailSalesPersonTvDetailRatingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="7dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"/>

            <RatingBar
                android:id="@+id/detailSalesPeronratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="4.5"
                android:progressTint="@color/blue"/>

            <!-- Expected Delivery Date -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expected Delivery: "
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold"
                android:paddingBottom="8dp"
                android:layout_marginStart="7dp"/>
            <TextView
                android:id="@+id/detailSalesPersonOrderExpectedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="July 31, 2024"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold"
                android:paddingBottom="8dp"
                android:layout_marginStart="7dp"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: "
                    android:fontFamily="@font/inter_bold"
                    android:textStyle="bold"
                    android:layout_marginStart="7dp"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"/>


            <TextView
                android:id="@+id/detailSalesPersonTvDetailQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500 windows"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Id : "
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="7dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/detailSalesPersonTvDetailProductId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456780"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client Id: "
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="7dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/detailSalesPersonTvDetailClientId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC777777"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client Name: "
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="7dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/detailSalesPersonTvDetailClientFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arjun"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile No: "
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="7dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/detailSalesPersonTvDetailClientMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 7777777777"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client Company: "
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="7dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/detailSalesPersonTvDetailClientCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xyz Company"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client Address: "
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="7dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/detailSalesPersonTvDetailClientLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangloore India"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Created: "
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="7dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/detailSalesPersonTvDetailCreatedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7/7/2024 10:30 PM"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due Date: "
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="7dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/detailSalesPersonTvDetailDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7/8/2024 12:00 PM"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

            <TextView
                android:id="@+id/detailSalespersonTVShowTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/lorem"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/detailSalespersonTVShowDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem"
                android:textStyle="bold"
                android:fontFamily="@font/inter_bold"
                android:layout_marginStart="7dp"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <!-- tracking_progress.xml -->

                <!-- Tracking Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Process of tracking"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="16dp"/>

                <!-- Step 1: Order Received -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/ivOrderReceivedFSPP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_check_circle_24"
                        app:tint="@color/green"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order Received"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"/>

                </LinearLayout>

                <!-- Step 2: In Production -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/ivInProductionFSPP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_check_circle_24"
                        app:tint="@color/green"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="In Production"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"/>

                </LinearLayout>

                <!-- Step 3: Quality Check -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/ivQualityCheckFSPP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_check_circle_24"
                        app:tint="@color/green"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quality Check"
                        android:fontFamily="@font/inter_bold"

                        android:textSize="16sp"
                        android:layout_marginStart="16dp"/>

                </LinearLayout>

                <!-- Step 4: Ready for Delivery -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/ivReadyForDeliveryFSPP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_check_circle_24"
                        app:tint="@color/green"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ready for Delivery"
                        android:fontFamily="@font/inter_bold"

                        android:textSize="16sp"
                        android:layout_marginStart="16dp"/>

                </LinearLayout>

                <!-- Step 5: Delivered -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivDeliveredFSPP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_check_circle_24"
                        app:tint="@color/green"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delivered"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"/>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</androidx.cardview.widget.CardView>