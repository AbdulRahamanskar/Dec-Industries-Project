    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_bgcolor"
    tools:context=".salesperson.SalesPersonCreateOrder">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        android:id="@+id/sales_toolbar"
        app:title=""
        app:subtitle="Create Order"
        android:gravity="center"
        app:subtitleTextColor="@color/white"
        app:subtitleTextAppearance="@style/toolbarsubtitleTextStyle"/>
    <ScrollView
        android:layout_below="@id/sales_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none"
        android:background="@color/settings_bgcolor"
        android:layout_above="@id/salesPersonBottom">

        <LinearLayout
