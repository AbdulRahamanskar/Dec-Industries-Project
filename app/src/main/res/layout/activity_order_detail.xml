                    android:fontFamily="@font/inter_bold"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
